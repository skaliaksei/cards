import CostItem from "./components/CostItem";
import costs from "./components/db";

function App() {
    return (
        <div className="App">
            <CostItem date = {costs[0].date} description = {costs[0].description} price = {costs[0].price} />
            <CostItem date = {costs[1].date} description = {costs[1].description} price = {costs[1].price} />
            <CostItem date = {costs[2].date} description = {costs[2].description} price = {costs[2].price} />
            <h3>Hello, my React!</h3>
            <p>Hey, there!</p>

        </div>
    );
}

export default App;


